<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wuyi.mall.mapper.UserMapper">

    <!-- 基础结果集映射 -->
    <resultMap id="BaseResultMap" type="com.wuyi.mall.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="default_address" property="defaultAddress" jdbcType="VARCHAR"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="is_deleted" property="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 根据用户名或手机号查询用户 -->
    <select id="selectByUsernameOrPhone" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
            id,
            username,
            password,
            phone,
            default_address,
            role,
            create_time,
            update_time,
            is_deleted
        FROM
            user
        WHERE
            (username = #{account} OR phone = #{account})
            AND is_deleted = 0
    </select>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
            id,
            username,
            password,
            phone,
            default_address,
            role,
            create_time,
            update_time,
            is_deleted
        FROM
            user
        WHERE
            username = #{username}
            AND is_deleted = 0
    </select>

    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
            id,
            username,
            password,
            phone,
            default_address,
            role,
            create_time,
            update_time,
            is_deleted
        FROM
            user
        WHERE
            phone = #{phone}
            AND is_deleted = 0
    </select>

</mapper>